<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 提交dialog样式 -->
    <style name="zyDialog_custom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
    </style>

    <!-- dialog底部弹出菜单动画 -->
    <style name="zyBottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/zybottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/zybottom_menu_exit</item>
    </style>

</resources>